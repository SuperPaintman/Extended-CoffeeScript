    - begin: >-
        (?x)
          (?=\s*)
          (([a-zA-Z0-9\$_]*)\s*([:=])\s*)?
          (?=\([^()]*\)\s*([=-]>))
      # end: (?<=\))\s*(=>)
      end: (\))\s*([=-]>)
      # name: meta.inline.function.coffee
      beginCaptures:
        '2':
          name: entity.name.function.coffee
        '3':
          name: keyword.operator.coffee

      endCaptures:
        '2':
          name: storage.type.function.coffee

      patterns:
      - include: '#function_parameters'

    - match: >-
        (?x)
          (?=\s*)
          (([a-zA-Z0-9\$_]*)\s*([:=])\s*)?
          (?=\s*)([=-]>)
      captures:
        '2':
          name: entity.name.function.coffee
        '3':
          name: keyword.operator.coffee
